

<h1>Log in</h1>

<%= form_tag sessions_new_path do %>
  <ul>
    <li>
      <%= label_tag :username %>
      <%= text_field_tag :username %>
    </li>
    <li>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </li>
  </ul>
  <%= submit_tag "Log in" %>
<% end %>
    <p>New user? <%= link_to "Sign up now!", new_user_path %></p>
  </div>
