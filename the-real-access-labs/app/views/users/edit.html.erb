<div class="editUser">

	<%= form_for @user do |f| %>

		<ul class="editUserForm">

			<li><%= f.label :first_name %></li>
			<li class="newListItemLast"><%= f.text_field :first_name %></li>

			<li><%= f.label :last_name %></li>
			<li class="newListItemLast"><%= f.text_field :last_name %></li>

			<li><%= f.label :email %></li>
			<li class="newListItemLast"><%= f.text_field :email %></li>

			<li><%= f.label :username %></li>
			<li class="newListItemLast"><%= f.text_field :username %></li>

			<li><%= f.label :password %></li>
			<li class="newListItemLast"><%= f.text_field :password %></li>

			<li><%= f.label :profile_pic %></li>
			<li class="newListItemLast"><%= f.text_field :profile_pic %></li>

			<li><%= f.submit %></li>
		
		</ul>

	<% end %>	

</div>